<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProfileActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Fuel: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Profile Name: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prof_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/fuelType_group"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_name">

        <RadioButton
            android:id="@+id/fuel1"
            android:tag="Fuel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\tFuel1" />

        <RadioButton
            android:id="@+id/fuel2"
            android:tag="Fuel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\tFuel2" />

        <RadioButton
            android:id="@+id/fuel3"
            android:tag="Fuel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\tFuel3" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Amount:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuelType_group" />

    <RadioGroup
        android:id="@+id/fuelAmount_group"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/euro5_btn"
            android:tag="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\t5" />

        <RadioButton
            android:id="@+id/euro10_btn"
            android:tag="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\t10" />

        <RadioButton
            android:id="@+id/euro20_btn"
            android:tag="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\t20" />

        <RadioButton
            android:id="@+id/euro50_btn"
            android:tag="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\t50" />

        <RadioButton
            android:id="@+id/full_btn"
            android:tag="Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\tFull" />

        <RadioButton
            android:id="@+id/other_btn"
            android:tag="Other..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/payment_methods_button_background"
            android:text="\tOther..." />
    </RadioGroup>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Save profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuelAmount_group" /><![CDATA[






        />

]]>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>