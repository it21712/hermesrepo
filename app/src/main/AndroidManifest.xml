<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.convr.hermes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HermesCustomTheme">
        <activity android:name=".core.PaypalAccountsActivity" />
        <activity android:name=".core.CardsActivity" />
        <activity android:name=".easyfuel.TransactionStatusMessageActivity" />
        <activity android:name=".core.statistics.PaymentsBreakdownActivity" />
        <activity android:name=".core.AccountDetails" />
        <activity android:name=".wickets.WicketCodeActivity" />
        <activity
            android:name=".easyfuel.tests.NavBar"
            android:label="@string/title_activity_nav_bar"
            android:theme="@style/HermesCustomTheme.NoActionBar"> <!-- AppTheme.NoActionBar -->


            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".easyfuel.braintreegateway.BraintreeBrowserSwitchActivity" />
        <activity
            android:name="com.braintreepayments.api.BraintreeBrowserSwitchActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="${applicationId}.braintree" />
            </intent-filter>
        </activity>
        <activity android:name=".easyfuel.braintreegateway.BraintreeSetupIntentActivity" />
        <activity android:name=".easyfuel.login.HermesUsageActivity">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            -->
        </activity>
        <activity android:name=".easyfuel.enterprice.eu.vatchecker.VATCheckActivity" />
        <activity android:name=".easyfuel.enterprice.eu.vatchecker.TestActivity" />
        <activity android:name=".core.MainMenu">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            -->
        </activity>
        <activity android:name=".stripe.CardDetailsActivity" />
        <activity android:name=".stripe.SetupIntentActivity" />
        <activity android:name=".easyfuel.QuickSelection" />
        <activity android:name=".easyfuel.NewProfileActivity" />
        <activity android:name=".easyfuel.ProfilesActivity" />
        <activity android:name=".easyfuel.BarcodeActivity" />
        <activity android:name=".easyfuel.MainActivity" />
        <activity android:name=".google_auth.LoginActivity" />
        <activity android:name=".google_auth.RegisterActivity" />
        <activity android:name=".google_auth.AuthenticateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>